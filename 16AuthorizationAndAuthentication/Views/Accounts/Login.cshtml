@model _16AuthorizationAndAuthentication.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@using (Html.BeginForm("Login", "Accounts", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(x => x.Email, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(x => x.Email, "", new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Password, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.RememberMe, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.CheckBoxFor(x => x.RememberMe)
            @Html.ValidationMessageFor(x => x.RememberMe, "", new { @class = "text-danger" })
        </div>
    </div>

    <input type="submit" value="Login" />
}

<h4 class="text-danger">@ViewBag.Error</h4>